{
    "$schema": "http://schema-management-azure-com.o365.apps.cyberark.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "License Agreement": {
            "defaultValue": "Decline",
            "allowedValues": [
                "Accept",
                "Decline"
            ],
			"maxLength": 6,
            "type": "String",
            "metadata": {
                "description": "I have read and agree to the Terms and Conditions."
            }
        },
        "Vault Private IP": {
            "type": "String",
            "metadata": {
                "description": "Enter the IP of the Vault instance."
            }
        },
        "Vault DR Private IP": {
            "type": "String",
            "metadata": {
                "description": "Enter the IP of the Vault DR instance. (Optional)"
            }
        },
        "Vault Admin User": {
            "defaultValue": "Administrator",
            "type": "String",
            "metadata": {
                "description": "Enter the Administrator Vault user."
            }
        },
        "Vault Admin Password": {
            "type": "SecureString",
            "metadata": {
                "description": "Enter a password for the Vault Administrator user."
            }
        },
        "Component To Install": {
            "defaultValue": "CPM",
            "allowedValues": [
                "CPM",
                "PVWA",
                "PSM",
                "PSMP"
            ],
            "type": "String",
            "metadata": {
                "description": "Choose the Component to install."
            }
        },
        "Component VM Host Name": {
            "type": "String",
            "metadata": {
                "description": "Enter the host name for the PAS Component VM."
            }
        },
        "Component VM Size": {
            "defaultValue": "Standard_DS1_v2",
            "type": "String",
            "metadata": {
                "description": "Enter the desired VM Size"
            }
        },
        "Component VM Admin User": {
            "type": "String",
            "metadata": {
                "description": "Enter Component VM Administrator user."
            }
        },
        "Component VM Admin Password": {
            "type": "SecureString",
            "metadata": {
                "description": "Enter Component VM Administrator password."
            }
        },
        "ImageID": {
            "type": "String",
            "metadata": {
                "description": "Enter Components Image ID."
            }
        },
        "Component AvailablitySet Name": {
            "type": "String",
            "metadata": {
                "description": "If already exist please fill the current AS name"
            }
        }
    },
    "variables": {
        "vnetId": "[resourceId('Microsoft.Network/virtualNetworks', 'Components-Vnet')]",
        "subnetRefComponent": "[concat(variables('vnetId'), '/subnets/','Components-Subnet')]",
        "subnetRefWeb": "[concat(variables('vnetId'), '/subnets/', 'Web-Subnet')]",
        "networkInterfaceName": "[toLower(concat(parameters('Component VM Host Name'), '-', uniqueString(resourceGroup().id)))]",
        "availabilitySetPlatformFaultDomainCount": 3,
        "availabilitySetPlatformUpdateDomainCount": 5,
        "publicIpAddressName": "[toLower(concat(parameters('Component VM Host Name'), '-', uniqueString(resourceGroup().id)))]",
        "psmpvmname": "[concat(parameters('Component VM Host Name'), '-psmp')]"
    },
    "resources": [
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[variables('psmpvmname')]",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('Component VM Host Name')]",
                    "adminUsername": "[parameters('Component VM Admin User')]",
                    "adminPassword": "[parameters('Component VM Admin Password')]"
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('Component VM Size')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "id": "[parameters('ImageID')]"
                    },
                    "osDisk": {
                        "createOption": "fromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
                        }
                    ]
                },
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('Component AvailablitySet Name'))]"
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('networkInterfaceName'))]",
                "[concat('Microsoft.Compute/availabilitySets/', parameters('Component AvailablitySet Name'))]"
            ],
            "condition": "[and(equals(parameters('Component To Install'),'PSMP'),equals(parameters('License Agreement'), 'Accepted'))]"
        },
        {
            "type": "Microsoft.Compute/virtualMachines",
            "name": "[parameters('Component VM Host Name')]",
            "apiVersion": "2017-03-30",
            "location": "[resourceGroup().location]",
            "identity": {
                "type": "SystemAssigned"
            },
            "properties": {
                "osProfile": {
                    "computerName": "[parameters('Component VM Host Name')]",
                    "adminUsername": "[parameters('Component VM Admin User')]",
                    "adminPassword": "[parameters('Component VM Admin Password')]",
                    "windowsConfiguration": {
                        "provisionVmAgent": "true"
                    }
                },
                "hardwareProfile": {
                    "vmSize": "[parameters('Component VM Size')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "id": "[parameters('ImageID')]"
                    },
                    "osDisk": {
                        "createOption": "FromImage",
                        "managedDisk": {
                            "storageAccountType": "Premium_LRS"
                        }
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', variables('networkInterfaceName'))]"
                        }
                    ]
                },
                "availabilitySet": {
                    "id": "[resourceId('Microsoft.Compute/availabilitySets', parameters('Component AvailablitySet Name'))]"
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Network/networkInterfaces/', variables('networkInterfaceName'))]",
                "[concat('Microsoft.Compute/availabilitySets/', parameters('Component AvailablitySet Name'))]"
            ],
            "condition": "[and(not(equals(parameters('Component To Install'), 'PSMP')),equals(parameters('License Agreement'), 'Accepted'))]"
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('Component VM Host Name'),'/', 'customscript')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "config-component"
            },
            "properties": {
                "publisher": "Microsoft.Compute",
                "type": "CustomScriptExtension",
                "typeHandlerVersion": "1.9",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "fileUris": []
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('powershell -ExecutionPolicy Unrestricted -file ', 'C:\\cyberark\\componentregistration.ps1', ' ', parameters('Component To Install'), ' ', parameters('Vault Private IP'), ' ',  parameters('Vault Admin User'),' ',parameters('Vault Admin Password'))]"
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', parameters('Component VM Host Name'))]"
            ],
            "condition": "[not(equals(parameters('Component To Install'), 'PSMP'))]"
        },
        {
            "type": "Microsoft.Compute/virtualMachines/extensions",
            "name": "[concat(parameters('Component VM Host Name'),'/', 'customscriptpsmp')]",
            "apiVersion": "2015-06-15",
            "location": "[resourceGroup().location]",
            "tags": {
                "displayName": "config-component-psmp"
            },
            "properties": {
                "publisher": "Microsoft.Azure.Extensions",
                "type": "CustomScript",
                "typeHandlerVersion": "2.0",
                "autoUpgradeMinorVersion": true,
                "settings": {
                    "skipDos2Unix": false
                },
                "protectedSettings": {
                    "commandToExecute": "[concat('/var/tmp/register_and_activation.sh ', parameters('Vault Admin User'), ' ', parameters('Vault Admin Password'), ' ',  parameters('Vault Private IP'), ' ', 'psmp2', ' ', parameters(Component VM Admin User), ' ', 'yes')]",
                    "fileUris": []
                }
            },
            "dependsOn": [
                "[concat('Microsoft.Compute/virtualMachines/', variables('psmpvmname'))]"
            ],
            "condition": "[equals(parameters('Component To Install'),'PSMP')]"
        },
        {
            "type": "Microsoft.Compute/availabilitySets",
            "name": "[parameters('Component AvailablitySet Name')]",
            "apiVersion": "2016-04-30-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "platformFaultDomainCount": "[variables('availabilitySetPlatformFaultDomainCount')]",
                "platformUpdateDomainCount": "[variables('availabilitySetPlatformUpdateDomainCount')]",
                "managed": true
            }
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(variables('networkInterfaceName'), '-external')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[variables('subnetRefWeb')]"
                            },
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIpAddress": {
                                "id": "[resourceId('Microsoft.Network/publicIpAddresses', variables('publicIpAddressName'))]"
                            }
                        }
                    }
                ]
            },
            "dependsOn": [
                "[concat('Microsoft.Network/publicIpAddresses/', variables('publicIpAddressName'))]"
            ],
            "condition": "[equals(parameters('Component To Install'),'PVWA')]"
        },
        {
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[variables('networkInterfaceName')]",
            "apiVersion": "2016-09-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "subnet": {
                                "id": "[if(equals(parameters('Component To Install'),'CPM'), variables('subnetRefComponent'), variables('subnetRefWeb'))]"
                            },
                            "privateIPAllocationMethod": "Dynamic"
                        }
                    }
                ]
            },
            "condition": "[not(equals(parameters('Component To Install'),'PVWA'))]"
        },
        {
            "type": "Microsoft.Network/publicIPAddresses",
            "sku": {
                "name": "Basic"
            },
            "name": "[variables('publicIpAddressName')]",
            "apiVersion": "2017-08-01",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIpAllocationMethod": "Static"
            },
            "condition": "[equals(parameters('Component To Install'),'PVWA')]"
        }
    ],
    "outputs": {
        "adminUsername": {
            "type": "String",
            "value": "[parameters('Component VM Admin User')]"
        }
    }
}